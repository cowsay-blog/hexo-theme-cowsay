<ul class="home post-list">
  {% for item in each_post(page.posts) %}
    <li class="post-list-item">
      <article class="post-block">
        <h2 class="post-title">
          <a class="post-title-link" href="{{ url_for(item.path) }}">
            {{ item.title }}
          </a>
        </h2>
        {% include "partial/post/post-info.njk" %}
        <div class="post-content">
          {{ excerpt(item, { triple_dot: false }) }}
          <a class="read-more" href="{{ url_for(item.path) }}">{{ __('more') }}</a>
        </div>
      </article>
    </li>
  {% endfor %}
</ul>